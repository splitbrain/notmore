{
    "name": "splitbrain/notmore",
    "description": "A web interface for notmuch",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "splitbrain\\notmore\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Andreas Gohr",
            "email": "andi@splitbrain.org"
        }
    ],
    "config": {
        "platform": {
            "php": "8.2.0"
        }
    },
    "require": {
        "php": ">=8.2",
        "altorouter/altorouter": "^2.0",
        "psr/log": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "twig/twig": "^3.0",
        "ezyang/htmlpurifier": "^4.19",
        "asika/autolink": "^2.2"
    },
    "scripts": {
        "notmuch": "notmuch --config=./data/notmuch-config",
        "test": "vendor/bin/phpunit --testdox --display-phpunit-deprecations --display-deprecations"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}
